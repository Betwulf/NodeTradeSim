<?xml version="1.0"?>
<configuration>
  <system.web>
    <compilation batch="false" />
  </system.web>
  <system.webServer>
    <staticContent>
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <mimeMap fileExtension=".woff" mimeType="application/x-woff" />
      <mimeMap fileExtension=".ttf" mimeType="application/x-woff" />
    </staticContent>
    <handlers>
      <add name="iisnode" path="NodeTradeSim.js" verb="*" modules="iisnode" />
    </handlers>
    <security>
      <ipSecurity allowUnlisted="true" /> 
    </security>
    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <match url="/*" />
          <action type="Rewrite" url="NodeTradeSim.js" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>